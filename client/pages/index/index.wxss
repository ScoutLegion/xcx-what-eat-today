/**index.wxss**/

.container {
  position: relative;
  padding-top: 142rpx;
  padding-bottom: 140rpx;
}

.top-bg {
  width: 100%;
  height: 500rpx;
  position: absolute;
  top: 0;
  z-index: -2;
}

.top-bg-mask {
  width: 100%;
  height: 500rpx;
  position: absolute;
  top: 0;
  z-index: -1;
  background: linear-gradient(178.4deg, rgba(238, 238, 238, 0.8), rgba(255, 255, 255, 1));
}

.main-box {
  width: 596rpx;
  margin: 0 auto 66rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx -52rpx 60rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}

/* first-view */

.first-view {
  height: 720rpx;
  padding-top: 46rpx;
  padding-left: 64rpx;
}

.title1 {
  font-size: 48rpx;
  color: #6C6C6C;
}

.title2,
.title3 {
  font-size: 68rpx;
  font-weight: 800;
}

.girl-img {
  width: 462rpx;
  height: 36orpx;
  margin-left: 66rpx
}

/* second-view */

.second-view {
  overflow: hidden;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}

.second-img {
  width: 596rpx;
  height: 510rpx;
}

.intro-view {
  padding: 32rpx;
  position: relative;
}

.food-info {
  width: 450rpx;
}

.food-name {
  font-size: 32rpx;
  color: #3C3C3C;
  font-weight: 600;
}

.food-price {
  font-size: 32rpx;
  color: #FA5555;
}

.distan-icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}

.food-store {
  width: 450rpx;
  font-size: 24rpx;
  color: #9C9C9C;
  margin-top: 16rpx;
}

/* button */

.today-botton {
  width: 576rpx;
  height: 108rpx;
  line-height: 108rpx;
  font-size: 40rpx;
  font-weight: 700;
  background: #FFD500;
  border: 0;
  border-radius: 58rpx;
}

.location-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
}

.location-btn {
  width: 710rpx;
  height: 114rpx;
  line-height: 114rpx;
  text-align: center;
  font-size: 40rpx;
  color: #666666;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  position: absolute;
}

.map {
  top: 942rpx;
  left: 50%;
  transform: translateX(-50%);
}

.cancel {
  top: 1072rpx;
  left: 50%;
  transform: translateX(-50%);
  font-weight: 600;
}